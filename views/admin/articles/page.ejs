<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container my-5">

    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-5 fw-bolder text-upper">Listagem de artigos</h1>
        <a href="/admin/articles/new" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>
            Novo artigo
        </a>
    </div>

    <table class="table table-bordered table-striped rounded-3">
        <thead>
            <tr>
                <th>#</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% console.log(articles) %> 
            <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td>
                        <a href="/admin/articles/edit/<%= article.id %>" class="btn-warning btn-sm btn">
                            <i class="fa-regular fa-pen-to-square me-2"></i>
                            Editar
                        </a>

                        <form 
                            action="/articles/delete" 
                            method="post" 
                            class="d-inline" 
                            onsubmit="confirmDelete(event)">

                            <input 
                                type="hidden" 
                                name="id" 
                                value="<%= article.id %>">

                            <button class="btn-danger btn-sm btn">
                                <i class="fa-regular fa-trash-can me-2"></i>
                                Excluir
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script>
    function confirmDelete(event) {
        event.preventDefault();
        if (confirm('Deseja realmente excluir?')) {
            event.target.submit();
        }
    }
</script>
