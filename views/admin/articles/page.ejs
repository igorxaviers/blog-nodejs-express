<%- include('../../partials/header.ejs')  %> 
<%- include('../../partials/navbar-home.ejs')  %> 

<h1 class="text-white my-5 text-center">DevBlog</h1>
<div class="container ">
    <div class="row position-relative">
        <% result.articles.rows.forEach(article => { %>
            <a href="/<%= article.slug %> " class="article">
                <div class="d-flex justify-content-between">
                    <p><%= article.category.title %> </p>
                    <!-- <p><%= article.createdAt %> </p> -->
                </div>
                <h3><%= article.title %> </h3>
            </a>
        <% }) %>
    </div>

    <div class="my-5 pb-5">
        <% if(result.page > 2) { %> 
            <a href="/articles/page/<%= result.page - 1 %>" class="btn btn-light float-start">
                <i class="fa-solid fa-chevron-left"></i>
                Anterior
            </a>
        <% } else if(result.page == 2) {%>
            <a href="/" class="btn btn-light float-start">
                <i class="fa-solid fa-chevron-left"></i>
                Anterior
            </a>
        <% } %>
        <% if(result.next) { %> 
            <a href="/articles/page/<%= result.page + 1 %> " class="btn btn-light float-end">
                Pr√≥ximo
                <i class="fa-solid fa-chevron-right"></i>
            </a>
        <% } %>
    </div>
    <img class="hand-background" src="/img/hand.png" alt="">
</div>


<%- include('../../partials/footer.ejs')  %> 