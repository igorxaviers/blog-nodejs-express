<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container my-5">

    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-5 fw-bolder text-upper">listagem categorias</h1>
        <a href="/admin/categories/new" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>
            Nova categoria
        </a>
    </div>

    <table class="table table-bordered table-striped rounded-3">
        <thead>
            <tr>
                <th>#</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(function(category) { %>
                <tr>
                    <td><%= category.id %></td>
                    <td><%= category.title %></td>
                    <td><%= category.slug %></td>
                    <td>
                        <a href="/admin/categories/edit/<%= category.id %>" class="btn-warning btn-sm btn">
                            <i class="fa-regular fa-pen-to-square me-2"></i>
                            Editar
                        </a>

                        <form 
                            action="/categories/delete" 
                            method="post" 
                            class="d-inline" 
                            onsubmit="confirmDelete(event)">

                            <input 
                                type="hidden" 
                                name="id" 
                                value="<%= category.id %>">

                            <button class="btn-danger btn-sm btn">
                                <i class="fa-regular fa-trash-can me-2"></i>
                                Excluir
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script>
    function confirmDelete(event) {
        event.preventDefault();
        if (confirm('Deseja realmente excluir?')) {
            event.target.submit();
        }
    }
</script>
